@model ChangePasswordModel
<div id="modal1" class="modal">
    <div class="modal__overlay">
    </div>
    <div class="modal__body">
        <div class="modal__inner">
            <form asp-action="ReplacePassword" method="post" class="container">
                <div class="login-box">
                    <h2>Đổi mật khẩu</h2>
                    <div class="input-group">
                        <label for="old_pass">Mật khẩu cũ </label>
                        <input asp-for="OldPassword" type="password" class="input" name="OldPassword" required>
                    </div>
                    <div class="input-group">
                        <label for="new_pass">Mật khẩu mới</label>
                        <input asp-for="NewPassword" type="password" class="input" name="NewPassword" required>
                    </div>
                    <div class="input-group">
                        <label for="new_pass1">Xác nhận mật khẩu mới</label>
                        <input asp-for="ConfirmNewPassword" type="password" class="input" name="ConfirmNewPassword" required>
                    </div>
                    <button type="submit" class="btn1">Đồng ý</button>
                    <button type="button" class="btn1" id="ev">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>