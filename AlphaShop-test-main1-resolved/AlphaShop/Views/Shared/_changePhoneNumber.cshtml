@model ChangePhoneNumberModel

<div id="modal2" class="modal">
    <div class="modal__overlay">
    </div>
    <div class="modal__body">
        <div class="modal__inner">
            <form asp-action="ReplacePhoneNumber" method="post" class="container">
                <div class="login-box">
                    <h2>Đổi mật khẩu</h2>
                    <div class="input-group">
                        <label for="old_pass">SĐT cũ </label>
                        <input asp-for="OldPhoneNumber" type="password" class="input" name="OldPhoneNumber" required>
                    </div>
                    <div class="input-group">
                        <label for="new_pass">SĐT mới</label>
                        <input asp-for="NewPhoneNumber" type="password" class="input" name="NewPhoneNumber" required>
                    </div>
                    <div class="input-group">
                        <label for="new_pass1">Xác nhận SĐT mới</label>
                        <input asp-for="ConfirmNewPhoneNumber" type="password" class="input" name="ConfirmNewPhoneNumber" required>
                    </div>
                    <button type="submit" class="btn1">Đồng ý</button>
                    <button type="button" class="btn1" id="ev1">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>