@model AlphaShop.Models.LoginModel
@{
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="~/assets/css/login.css" runat="server" asp-append-version="true">
    <link href='https://fonts.googleapis.com/css?family=JetBrains Mono' rel='stylesheet'>
    <title>Home</title>
</head>
<body>
    <form asp-action="Login" class="container">
        <div class="login-box">
            <div class="logo"></div>
            <h2>Đăng nhập</h2>
            <div class="input-group">
                <div class="input_content">
                    <label asp-for="Name">Tài khoản </label>
                    <input asp-for="Name" type="text" class="input" required>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group">
                <div class="input_content">
                    <label asp-for="Password">Mật khẩu </label>
                    <input asp-for="Password" type="password" class="input" required>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit" class="btn1" value="Đăng nhập">
        </div>
        <ul class="list">
            <li class="list__item">
                <a href="" class="list__item-link">Quên mật khẩu</a>
            </li>
            <li class="list__item">
                <a asp-action="Register" class="list__item-link">Chưa có tài khoản? Đăng ký ngay</a>
            </li>
        </ul>
        <h3>@ViewBag.LoginFail</h3>

    </form>
</body>

